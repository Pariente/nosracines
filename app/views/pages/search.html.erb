<div class="section search_header">
  <h1>Résultats de la recherche</h1>
  <%= render "pages/search_input", value: @keywords %>
</div>
<div class="filters_bar">
  <span>Filtrer les résultats</span>
  <i class="material-icons">expand_more</i>
</div>

<% unless @people == [] %>
  <%= render "pages/search_category_people",
        people: @people %>
<% end %>

<% unless @images == [] %>
  <%= render "pages/search_category_documents", 
        category: "Photographies",
        icon: "image",
        docs: @images
  %>
<% end %>

<% unless @texts == [] %>
  <%= render "pages/search_category_documents", 
        category: "Documents",
        icon: "text_snippet",
        docs: @texts
  %>
<% end %>

<% unless @audios == [] %>
  <%= render "pages/search_category_documents", 
        category: "Audios",
        icon: "audio",
        docs: @audios
  %>
<% end %>

<% unless @videos == [] %>
  <%= render "pages/search_category_documents", 
        category: "Vidéos",
        icon: "video",
        docs: @videos
  %>
<% end %>

<% unless @others == [] %>
  <%= render "pages/search_category_documents", 
        category: "Autres documents",
        icon: "miscellaneous",
        docs: @others
  %>
<% end %>

<% unless @events == [] %>
  <%= render "pages/search_category_events",
        events: @events %>
<% end %>

<% unless @locations == [] %>
  <%= render "pages/search_category_locations",
        locations: @locations %>
<% end %>