<!-- *** DOCUMENTS *** -->
<div class="section search_category">
  <div class="search_category_header">
    <i class="material-icons"><%= icon %></i>
    <h2><%= category %></h2>
  </div>
  <div class="search_results">
    <% docs.each do |doc| %>
      <%= render "documents/card", doc: doc %>
    <% end %>
  </div>
  <% if count > 1 %>
    <%= link_to search_documents_path(keywords: @keywords, people: @people_all, icon: icon, category: category) do %>
      Voir les <%= count %> r√©sultats
    <% end %>
  <% end %>
</div>